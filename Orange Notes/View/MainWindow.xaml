<Window x:Class="Orange_Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModelNamespace="clr-namespace:Orange_Notes.ViewModel"
        mc:Ignorable="d"
        Title="Orange Notes" Height="450" Width="800">

    <Window.DataContext>
        <ViewModelNamespace:NoteViewModel/>
    </Window.DataContext>

    <Grid>
        <TextBox Text="{Binding notes[0].content}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding notes[0].content}" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding notes[1].content}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>

</Window>